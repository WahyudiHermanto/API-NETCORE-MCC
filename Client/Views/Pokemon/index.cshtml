@{
    ViewData["Title"] = "POKEMON";
    Layout = "_Layout";
}




<h1>Tabel POKEMON</h1>
<table class="table table-hover table-responsive table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Link</th>
            <th>Detail</th>
        </tr>
    </thead>
    <tbody class=" tablePoke" style="color: black">
        <tr>
        </tr>
    </tbody>
</table>

<div class="modal fade bd-example-modal-lg" id="getPoke" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Pokemon Detail</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="text-center" id="detailImage">
                        <img src="" alt="" />
                    </div>
                    <div class="row text-center">
                        <div class="detailName col text-capitalize h3"><b>Pokemon</b></div>
                    </div>
                    <div class="row">
                        <span class="badge mb-1" style="font-size: 20px; margin: auto">pokemon</span>
                    </div>
                    <div class="text-center bg-secondary" style="color: white "><b>Detail</b></div>
                    <div style="color: black ">
                        <div class="row">
                            <div class="col"><b>Ability</b></div>
                            <div class="ability col">Pokemon</div>
                        </div>
                        <div class="row">
                            <div class="col"><b>Weight</b></div>
                            <div class="weight col">100</div>
                        </div>
                        <div class="row">
                            <div class="col"><b>Height</b></div>
                            <div class="height col">200</div>
                        </div>
                    </div>
                    <div class="text-center bg-secondary" style="color: white "><b>Stat</b></div>
                    <div class="col" style="color: black " id="stat">
                        <div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="Edit()">Close</button>
            </div>
        </div>
    </div>
</div>

