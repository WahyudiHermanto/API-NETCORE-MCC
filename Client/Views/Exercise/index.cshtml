                    <div class="form-row">
                        <div class="col-md mb-3">
                            <label for="birthDateedit">Birth Date</label>
                            <input type="date" class="form-control" id="birthDateedit" required>
                            <div class="invalid-feedback">
                                Please choose Birth Date.
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md mb-3">
                            <label for="phoneNumberedit">Phone Number</label>
                            <input type="text" class="form-control" id="phoneNumberedit" required>
                            <div class="invalid-feedback">
                                Please provide a Phone Number.
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md mb-3">
                            <label for="emailedit">Email</label>
                            <input type="email" class="form-control" id="emailedit" required>
                            <div class="invalid-feedback">
                                Please input your Email.
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md mb-3">
                            <label for="salaryedit">Salary</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupPrepend">Rp</span>
                                </div>
                                <input type="number" class="form-control" id="salaryedit" aria-describedby="inputGroupPrepend" required>
                                <div class="invalid-feedback">
                                    Please input your salary.
                                </div>
                            </div>
                        </div>
                    </div>

                    <button class="btn btn-primary edit" id="edit">Submit</button>
                </form>

            </div>
        </div>
    </div>
</div>

<table class="table table-hover" id="TableEmployee">
    <thead class="thead-dark">
        <tr>
            <th>No</th>
